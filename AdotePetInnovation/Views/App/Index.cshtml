<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img"> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a class="nav_logo"> <img src="~/img/iconlogo.png" width="30"/>
                    <span class="nav_logo-name">AdotePet</span> </a>
                <div class="nav_list"> 
                    <a href="#" class="nav_link active"> 
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Menu</span>
                    </a> <a href="~/App/Conta" class="nav_link">
                        <i class='bx bx-user nav_icon'></i> 
                        <span class="nav_name">Conta</span>
                    </a> 
                    <a href="~/App/Doar" class="nav_link"> 
                        <i class='bx bx-bookmark nav_icon'></i> 
                        <span class="nav_name">Doação Consciente</span> </a>
                        <a href="~/App/Pets" class="nav_link">
                        <i class='bx bx-message-square-detail nav_icon'></i> 
                        <span class="nav_name">Meus Pets</span>
                    </a>

                </div>
            </div> <a href="~/Home" class="nav_link"> 
                <i class='bx bx-log-out nav_icon'></i> 
                <span class="nav_name">Sair</span> </a>
        </nav>
    </div>

     <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            @foreach (var pet in Model.Dogs)
            {
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@pet.Foto" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">Abrir</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Contato</button>
                    </div>
                    <small class="text-muted">9 mins</small>
                  </div>
                </div>
              </div>
            </div>
            }
          </div>
        </div>
      </div>
    
    <div>
        <button> <a href="~/App/Info">Informações</a></button>
    </div>

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
