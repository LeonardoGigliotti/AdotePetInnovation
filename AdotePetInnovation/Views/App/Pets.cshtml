@{
    ViewData["Title"] = "Adotepetinnovation";
}

<link rel="stylesheet" href="~/css/menu.css" type="text/css" />
<script src="~/js/menu.js"> </script>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img"> <img src="https://i.imgur.com/hczKIze.jpg" alt=""> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a class="nav_logo"> <img src="~/img/iconlogo.png" width="30"/>
                    <span class="nav_logo-name">AdotePet</span> </a>
                <div class="nav_list">
                    <a href="~/App/Index" class="nav_link">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Menu</span>
                    </a> <a href="~/App/Conta" class="nav_link">
                        <i class='bx bx-user nav_icon'></i> 
                        <span class="nav_name">Conta</span>
                    </a> 
                    <a href="~/App/Doar" class="nav_link">
                        <i class='bx bx-bookmark nav_icon'></i> 
                        <span class="nav_name">Doação Consciente</span> </a>
                        <a href="~/App/Pets" class="nav_link">
                        <i class='bx bx-message-square-detail nav_icon'></i> 
                        <span class="nav_name">Meus Pets</span>
                    </a>

                </div>
            </div> <a href="~/Home" class="nav_link"> 
                <i class='bx bx-log-out nav_icon'></i> 
                <span class="nav_name">Sair</span> </a>
        </nav>
    </div>
    <h1>Dogs em adoção</h1>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var pet in Model.Dogs)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@pet.Foto" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text text-dark">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-action="Info" asp-route-id="@pet.Id" type="button" class="btn btn-sm btn-outline-secondary">Editar</a>
                                        <a asp-action="Info" asp-route-id="@pet.Id" type="button" class="btn btn-sm btn-outline-secondary">Remover</a>
                                    </div>
                                    <small class="text-muted"></small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>